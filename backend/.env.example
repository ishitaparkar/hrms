# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection settings
# For production, use environment-specific values
DB_NAME=hrms_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Django secret key - MUST be changed in production
# Generate a new key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated list of domains
# Example: ALLOWED_HOSTS=example.com,www.example.com,api.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For development, use console backend (default)
# For production, use SMTP backend

# Email Backend
# Options: 
#   - django.core.mail.backends.console.EmailBackend (development - prints to console)
#   - django.core.mail.backends.smtp.EmailBackend (production - sends via SMTP)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (required when using SMTP backend)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password-here

# Default sender email addresses
DEFAULT_FROM_EMAIL=noreply@hrms.example.com
SERVER_EMAIL=noreply@hrms.example.com

# Email timeout in seconds
EMAIL_TIMEOUT=10

# Gmail Configuration Notes:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password as EMAIL_HOST_PASSWORD (not your regular password)
# 4. Set EMAIL_HOST_USER to your full Gmail address

# Other SMTP Providers:
# - Outlook/Office365: smtp.office365.com, port 587
# - Yahoo: smtp.mail.yahoo.com, port 587
# - SendGrid: smtp.sendgrid.net, port 587
# - Mailgun: smtp.mailgun.org, port 587

# =============================================================================
# ONBOARDING & AUTHENTICATION CONFIGURATION
# =============================================================================
# Organization name displayed in welcome emails and portal
ORGANIZATION_NAME=HRMS

# Portal URL where employees access the system
# This URL is included in welcome emails for account activation
# For development: http://localhost:3000
# For production: https://your-domain.com
PORTAL_URL=http://localhost:3000

# Account setup token expiration time (in hours)
# Default: 24 hours
# This determines how long the account activation link remains valid
ACCOUNT_SETUP_TOKEN_EXPIRY_HOURS=24

# Maximum failed authentication attempts before account lockout
# Default: 3 attempts
# After this many failed phone authentication attempts, the account is temporarily locked
MAX_FAILED_AUTH_ATTEMPTS=3

# Phone authentication rate limiting (attempts per time window)
# Default: 5 attempts per 15 minutes
# Prevents brute force attacks on phone authentication
PHONE_AUTH_RATE_LIMIT_ATTEMPTS=5
PHONE_AUTH_RATE_LIMIT_WINDOW_MINUTES=15

# Temporary password configuration
# Minimum length for auto-generated temporary passwords
TEMP_PASSWORD_MIN_LENGTH=12

# Password validation requirements
# Minimum password length for user-created passwords
PASSWORD_MIN_LENGTH=8

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# For development: http://localhost:3000
# For production: https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# AUDIT LOGGING CONFIGURATION
# =============================================================================
# Enable/disable audit logging for authentication events
# Default: True
ENABLE_AUDIT_LOGGING=True

# Audit log retention period (in days)
# Default: 90 days
# Audit logs older than this will be archived/deleted
AUDIT_LOG_RETENTION_DAYS=90
